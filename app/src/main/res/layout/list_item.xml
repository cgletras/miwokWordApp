<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llv_list_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:background="@color/tan_background"
    android:minHeight="@dimen/list_item_height"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="@dimen/list_item_height"
        android:layout_height="@dimen/list_item_height"/>

    <LinearLayout
        android:id="@+id/llv_list_item_internal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/iv_image"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_miwok_word"
            style="@style/EnWordStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Lutti" />

        <TextView
            android:id="@+id/tv_english_word"
            style="@style/MwWordStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="One" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_play"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/round_play_arrow_white_24" />
</RelativeLayout>